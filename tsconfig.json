{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true
    },
    "exclude": [
      "old",
      "books"
    ]
}
